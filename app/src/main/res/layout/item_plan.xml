<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/item_plan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2500zł" />

    <TextView
        android:id="@+id/item_plan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/item_plan_amount"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wrzesień" />

    <TextView
        android:id="@+id/item_plan_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="2021.16.10"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/separator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:padding="4dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/item_plan_hour"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_plan_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21:00"
        android:padding="4dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>